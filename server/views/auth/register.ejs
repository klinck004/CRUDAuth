<!DOCTYPE html>
<html>

<head>
  <!-- Bootstrap 5.3.2 CDN -->
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <title><%= title %></title>
  <meta charset="UTF-8">
</head>

<body>
  <!--Header--><%- include('../partials/header.ejs') %>
  <main class="container">
    <div class="row">
      <div class="offset-md-4 col-md-4">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
        <% } %>
        <h1>Register</h1>
        <form method="post" autocomplete="off">
          <fieldset class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Enter username" id="username" required autofocus>
          </fieldset>
          <fieldset class="form-group mt-1">
            <input type="password" class="form-control" name="password" placeholder="Enter password" id="password" required>
          </fieldset>
          <fieldset class="form-group mt-1">
            <input type="email" class="form-control" name="email" placeholder="Enter your email address" id="email" required>
          </fieldset>
          <fieldset class="form-group mt-1">
            <input type="text" class="form-control" name="displayName" placeholder="Enter the display name you wish to use" id="displayName" required>
          </fieldset>
          <fieldset class="form-group text-right mt-2">
            <input type="submit" class="btn btn-success" value="Register">
            <a href="/">
              <input type="button" class="btn btn-warning" value="Cancel">
            </a>
          </fieldset>
        </form>
      </div>
    </div>
    <!--Footer--><%- include('../partials/footer.ejs') %>
  </main>
</body>

</html>