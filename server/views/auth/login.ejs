<!DOCTYPE html>
<html>

<head>
  <!-- Bootstrap 5.3.2 CDN -->
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <title><%= title %></title>
  <meta charset="UTF-8">
</head>

<body>
  <!--Header--><%- include('../partials/header.ejs') %>
  <main class="container mt-2">
    <div class="row">
      <div class="offset-md-4 col-md-4">
        <% if (message.length > 0) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>
        <h1>Login</h1>
        <form method="post" autocomplete="off">
          <fieldset class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Username" id="username" required autofocus>
          </fieldset>
          <fieldset class="form-group mt-1">
            <input type="password" class="form-control" name="password" placeholder="Password" id="password" required autofocus>
          </fieldset>
          <fieldset class="form-group text-right mt-1 me-auto">
            <span>
              <input type="submit" class="btn btn-success m-1" value="Login">
              <a href="/"><input type="button" class="btn btn-warning m-1" value="Cancel"></a>
            </span>
            <span>
              <a href="/register" class="btn btn-primary m-1">Register</a>
            </span>
          </fieldset>
        </form>
      </div>
    </div>

  </main>
</body>

</html>